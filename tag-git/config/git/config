[user]
	name = Laszlo Bacsi
	email = lackac@lackac.hu
	signingkey = lackac@lackac.hu

[author]
	email = laszlo.bacsi@100starlings.com

[include]
	path = private
	path = local
	path = theme

[alias]
	co = checkout
	ci = commit
	st = status
	br = branch
	cl = clone
	conflicts = !git ls-files --unmerged | cut -c51- | sort -u | xargs $EDITOR
	resolve = !git ls-files --unmerged | cut -c51- | sort -u | xargs git add
	headless = !sh -c 'git symbolic-ref HEAD refs/heads/$0 && rm .git/index && git clean -fdx'
	human = name-rev --name-only --refs=refs/heads/*
	humin = name-rev --refs=refs/heads/* --stdin
	cl = log -n25 --no-merges --date=short --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cd)%Creset' -- lib
	start = !git init && git commit --allow-empty -m \"Inception\"

[core]
	pager = delta
[interactive]
	diffFilter = delta --color-only
[color]
	diff = auto
	status = auto
	branch = auto

[init]
	defaultBranch = main
[branch]
	autosetuprebase = always
[commit]
	verbose = true
	gpgsign = true
[diff]
	algorithm = histogram
	colorMoved = default
	colorMovedWS = allow-indentation-change
	submodule = log
[status]
	submoduleSummary = true
[submodule]
	recurse = true
[merge]
	conflictstyle = zdiff3
[rebase]
	autosquash = true
	autostash = true
[fetch]
	prune = true
[push]
	default = upstream
	followTags = true
[rerere]
	enabled = true

[url "git@github.com:"]
	insteadOf = "gh:"
	pushInsteadOf = "github:"
	pushInsteadOf = "git://github.com/"
[url "git://github.com/"]
	insteadOf = "github:"
[url "git@gist.github.com:"]
	insteadOf = "gst:"
	pushInsteadOf = "gist:"
	pushInsteadOf = "git://gist.github.com/"
[url "git://gist.github.com/"]
	insteadOf = "gist:"
[url "git@heroku.com:"]
	insteadOf = "heroku:"

[delta]
	navigate = true

[heroku]
	account = personal

[hub]
	protocol = https

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	required = true
	process = git-lfs filter-process
